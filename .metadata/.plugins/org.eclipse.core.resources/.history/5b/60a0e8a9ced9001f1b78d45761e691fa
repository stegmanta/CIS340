package InClassProgram;
import java.util.Date;

import javax.swing.*;

//Tayler Stegman
//01-21-2025
//Phone Bill Project


public class PhoneBill {

	public static void main(String[] args) {
		//Declare all variables and constants
		final double rate = 19.99;
		double minutes, phoneBill = 0;
		String name = JOptionPane.showInputDialog(null,"Enter Customer Name", "Phone Bill", JOptionPane.QUESTION_MESSAGE);
		Date dateCreated = new Date();
		//Data input
		minutes = Double.parseDouble(JOptionPane.showInputDialog("How many minutes"));
		//Display input box requesting input for number of minutes
		//Convert minutesString to double variable minutes
		//Calculate cell phone bill
		if(minutes > 200) {
			phoneBill += (((minutes - 200) * 0.1) + rate);
		}else {
			phoneBill = rate;
		}
		//Output cell phone bill
		System.out.println(phoneBill);
		

	}

}

